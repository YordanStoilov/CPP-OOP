{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clean build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "rm -rf ./build/",
            "windows": {
                "command": "rm -R .\\build\\"
            }
        },
        {
            "type": "shell",
            "label": "make build dir",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "mkdir -p build",
            "windows": {
                "command": ".\\.vscode\\make_build_dir.bat\""
            }
        },
        {
            "type": "shell",
            "label": "build active file",
            "dependsOn": "make build dir",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "clang++.exe",
                "args": [
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                ]
            },
            "linux": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            }
        },
        {
            "type": "shell",
            "label": "build current directory",
            "dependsOn": "make build dir",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "clang++.exe",
                "args": [
                    "-std=c++17",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}\\*.cpp",
                    "-o",
                    "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                ]
            },
            "linux": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-std=c++17",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}/*.cpp",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-std=c++17",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}/*.cpp",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            }
        }
    ]
}
